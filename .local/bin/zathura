#!/bin/bash
shopt -s extglob

synctex() {
    for arg; do
        case $arg in
            --synctex-forward?(=*)|--synctex-editor-command?(=*)|-x*) return 0;;
            --) return 1;;
        esac
    done
    return 1
}

prefix=()
if [[ ! -v SANDBOX ]] && ! synctex "$@"; then
    prefix=(sandbox -xuw /run/cups/cups.sock)
    for arg; do
        [[ -e $arg && $(realpath -s -- "$arg") != /usr/* ]] && prefix+=(-r "$arg")
    done
fi
exec "${prefix[@]}" /usr/bin/zathura "$@"
