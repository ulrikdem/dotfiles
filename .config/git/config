[alias]
c = commit
l = log --graph --pretty='%C(auto)%as %h%d %s %Cblue(%an)'
pushf = push --force-with-lease
s = status -sb

[commit]
cleanup = scissors
verbose = true

[diff]
algorithm = histogram
tool = nvimdiff

[fetch]
prune = true

[interactive]
singleKey = true

[log]
date = iso

[merge]
autoStash = true
conflictStyle = zdiff3
tool = fugitive

[mergetool]
keepBackup = false

[mergetool "fugitive"]
cmd = nvim $MERGED +Gdiffsplit!

[rebase]
autoStash = true
autoSquash = true

[url "https://github.com/"]
insteadOf = github:

[includeIf "gitdir:~/.dotfiles.git"]
path = dotfiles

[include]
path = user
