Config
    { template = "}%xmonad%{%dynnetwork%%wi%%alsa:default:Master%%memory%%cpu%%cpufreq%%battery%%date%"
    , fgColor = "gray50"
    , commands =
        [ Run Wireless ""
            [ "-t", "<action=`nm-rofi`><action=`nm-connection-editor` button=3> <fn=1><qualitybar></fn> </action></action><fc=gray17>│</fc>"
            , "-W", "0"
            , "-f", "󰤯󰤟󰤢󰤥󰤨"
            ] 10
        , Run DynNetwork
            [ "-t", " <fn=1>󰇚</fn> <rx> <fn=1>󰕒</fn> <tx> <fc=gray33>KB/s</fc> <fc=gray17>│</fc>"
            , "-L", "0"
            , "-l", "gray33"
            ] 10
        , Run Cpu
            [ "-t", "<action=`alacritty -T htop -e htop -s PERCENT_CPU`> <fn=0></fn> <fn=2><fc=gray50,gray17><vbar></fc></fn>"
            ] 10
        , Run CpuFreq
            [ "-t", " <max> <fc=gray33>GHz</fc> </action><fc=gray17>│</fc>"
            , "-d", "1"
            ] 10
        , Run Memory
            [ "-t", "<action=`alacritty -T htop -e htop -s PERCENT_MEM`> <fn=0></fn> <fn=2><fc=gray50,gray17><usedvbar></fc></fn> </action><fc=gray17>│</fc>"
            , "-H", "80"
            , "-h", "red3,gray17"
            ] 10
        , Run Alsa "default" "Master"
            [ "-t", "<action=`volume toggle`><action=`volume 0+` button=3><action=`volume 2%+` button=4><action=`volume 2%-` button=5> <fn=1><status></fn> </action></action></action></action><fc=gray17>│</fc>"
            , "--"
            , "-O", "<fc=gray50>󰕾</fc>"
            , "-o", "<fc=gray50>󰖁</fc>"
            ]
        , Run Battery
            [ "-t", " <fn=1><leftbar></fn> <fn=0><acstatus></fn> <fc=gray17>│</fc>"
            , "-L", "20"
            , "-l", "red3"
            , "-W", "0"
            , "-f", "󰂎󰁺󰁻󰁼󰁽󰁾󰁿󰂀󰂁󰂂󰁹"
            , "--"
            , "-i", "<fc=gray33></fc>"
            , "-O", "<fc=gray33></fc>"
            , "-o", "<timeleft>"
            ] 10
        , Run Date " %Y-%m-%d %H:%M:%S " "date" 10
        ]
    }

